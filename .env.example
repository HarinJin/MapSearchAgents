# Kakao REST API Key
# Get it from: https://developers.kakao.com -> My Application -> App Keys -> REST API Key
KAKAO_REST_API_KEY=your_rest_api_key_here

# Optional: Kakao Mobility API Key (for route directions)
# KAKAO_MOBILITY_API_KEY=your_mobility_api_key_here

# Google Places API Key (for opening hours - used only when time-related query)
# Get it from: https://console.cloud.google.com -> APIs & Services -> Credentials
# Enable "Places API" in your project
# Monthly free credit: $200 (~28,500 requests)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Search Settings
DEFAULT_SEARCH_RADIUS=2000
MAX_RESULTS=15
ROUTE_SEGMENT_DISTANCE=5000
